{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Route Optimization API",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/tests/test_optimization.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug Route Optimization API (Step Into)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/tests/test_optimization.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false,
            "stopOnEntry": true
        },
        {
            "name": "Debug FastAPI Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/app/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false,
            "args": []
        },
        {
            "name": "Debug FastAPI with Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false,
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--log-level",
                "debug"
            ]
        },
        {
            "name": "Debug with Custom Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/debug_route_optimization.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "python": "${workspaceFolder}/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": false
        }
    ]
} 